{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks": true,
    "outDir": "build",
    "lib": ["es2017", "dom"],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*",
    "../common/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
